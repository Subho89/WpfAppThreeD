<Window x:Class="WpfAppThreeD.RangeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Range Settings" Height="400" Width="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Slider accuracy -->
        <TextBlock Text="Slider accuracy" FontWeight="Bold"/>

        <!-- Rounding Options -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0" VerticalAlignment="Center">
            <TextBlock Text="Rounding" Width="100" VerticalAlignment="Center"/>
            <RadioButton x:Name="btnR" Content="R" Width="40" Margin="5,0" GroupName="RoundingOptions" Checked="Rounding_Checked"/>
            <RadioButton x:Name="btnN" Content="N" Width="40" Margin="5,0" GroupName="RoundingOptions" Checked="Rounding_Checked"/>
            <RadioButton x:Name="btnE" Content="E" Width="40" Margin="5,0" GroupName="RoundingOptions" Checked="Rounding_Checked"/>
            <RadioButton x:Name="btnO" Content="O" Width="40" Margin="5,0" GroupName="RoundingOptions" Checked="Rounding_Checked"/>
        </StackPanel>

        <!-- Digits Slider -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0" VerticalAlignment="Center">
            <TextBlock Text="Digits" Width="100" VerticalAlignment="Center"/>
            <Slider x:Name="sliderDigits" Minimum="0" Maximum="10" Value="3" Width="200" IsEnabled="False"/>
            <TextBox x:Name="txtDigits" Text="{Binding ElementName=sliderDigits, Path=Value, Mode=TwoWay}" 
                     Width="40" Margin="5,0,0,0" HorizontalContentAlignment="Center"/>
        </StackPanel>

        <!-- Min/Max Values -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,15,0,0" VerticalAlignment="Center">
            <TextBlock Text="Min:" Width="50" VerticalAlignment="Center"/>
            <TextBox x:Name="MinValueBox" Width="100" Margin="5,0"/>
            <TextBlock Text="Max:" Width="50" Margin="15,0,0,0" VerticalAlignment="Center"/>
            <TextBox x:Name="MaxValueBox" Width="100" Margin="5,0"/>
        </StackPanel>

        <!-- Expression Input -->
        <StackPanel Grid.Row="4" Orientation="Vertical" Margin="0,20,0,0">
            <TextBlock x:Name="lblExpression" Text="Expression" FontWeight="Bold"/>
            <TextBox x:Name="txtExpression" Height="28" Margin="0,5,0,0"/>
            <TextBlock Text="Expression to enable mathematical operations. The results shall be visible in the Coordinate text box"
                       TextWrapping="Wrap" Foreground="Gray" FontSize="12" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Interpretation Section -->
        <TextBlock Grid.Row="5" Margin="0,10,0,0" TextWrapping="Wrap" FontSize="12" Foreground="DarkGoldenrod">
            <Run Text="R means floating point numbers. Digits slider is only active when this option is selected."/><LineBreak/>
            <Run Text="N means integers"/><LineBreak/>
            <Run Text="E means Even"/><LineBreak/>
            <Run Text="O means Odd"/><LineBreak/>
            <Bold>Interpretation:</Bold>
            <Run Text=" These will alter the type of numbers that can be entered in Min and Max."/>
        </TextBlock>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="OK" Width="80" Margin="5" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
