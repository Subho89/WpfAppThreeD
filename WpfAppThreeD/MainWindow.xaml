<Window x:Class="WpfAppThreeD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:h="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
        Title="3D Coordinate Viewer" Height="700" Width="1000">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- 3D Viewport -->
        <h:HelixViewport3D x:Name="view1" Grid.Column="0" ShowCoordinateSystem="True" ShowViewCube="True"
                           MouseDown="view1_MouseDown" MouseMove="view1_MouseMove" MouseUp="view1_MouseUp">
            <h:DefaultLights />

            <!-- Axes -->
            <ModelVisual3D x:Name="AxesVisual" />
            <!-- Axis labels -->
            <ModelVisual3D x:Name="AxisLabelsVisual" />
            <!-- Bounding box -->
            <ModelVisual3D x:Name="BoundingBoxVisual" />
            <!-- Main draggable point + lines -->
            <ModelVisual3D x:Name="PointVisual" />
            <!-- Grid -->
            <ModelVisual3D x:Name="GridVisual" />
        </h:HelixViewport3D>

        <!-- Controls -->
        <StackPanel Grid.Column="1" Margin="10" Orientation="Vertical" VerticalAlignment="Top">
            <!-- Ranges -->
            <TextBlock Text="Min/Max Ranges" FontWeight="Bold" Margin="0,0,0,5"/>
            <UniformGrid Columns="4" Rows="3" Margin="0,0,0,10">
                <TextBlock Text="X Min:"/>
                <TextBox x:Name="txtXMin" Text="0"/>
                <TextBlock Text="X Max:"/>
                <TextBox x:Name="txtXMax" Text="10"/>

                <TextBlock Text="Y Min:"/>
                <TextBox x:Name="txtYMin" Text="0"/>
                <TextBlock Text="Y Max:"/>
                <TextBox x:Name="txtYMax" Text="10"/>

                <TextBlock Text="Z Min:"/>
                <TextBox x:Name="txtZMin" Text="0"/>
                <TextBlock Text="Z Max:"/>
                <TextBox x:Name="txtZMax" Text="10"/>
            </UniformGrid>

            <!-- Set Point -->
            <TextBlock Text="Set Point (X, Y, Z)" FontWeight="Bold" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox x:Name="txtX" Width="50" Text="0"/>
                <TextBox x:Name="txtY" Width="50" Margin="5,0" Text="0"/>
                <TextBox x:Name="txtZ" Width="50" Text="0"/>
                <Button x:Name="btnSet" Content="Set" Margin="10,0,0,0" Click="btnSet_Click"/>
            </StackPanel>

            <!-- Sliders -->
            <TextBlock Text="Move with Sliders" FontWeight="Bold" Margin="0,0,0,5"/>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="X:"/>
                <Slider x:Name="sliderX" Minimum="0" Maximum="10" Value="0" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
                <TextBlock Text="Y:"/>
                <Slider x:Name="sliderY" Minimum="0" Maximum="10" Value="0" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
                <TextBlock Text="Z:"/>
                <Slider x:Name="sliderZ" Minimum="0" Maximum="10" Value="0" TickFrequency="1" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>