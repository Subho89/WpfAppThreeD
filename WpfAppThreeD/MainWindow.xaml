<Window x:Class="WpfAppThreeD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:h="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
        Title="3D Coordinate Viewer" Height="800" Width="1200" WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Control Panel -->
        <StackPanel DockPanel.Dock="Top" Orientation="Vertical" Margin="10">
            <!-- Manual Input -->
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="X:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtX" Width="50" Text="0"/>
                <TextBlock Text="Y:" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <TextBox x:Name="txtY" Width="50" Text="0"/>
                <TextBlock Text="Z:" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <TextBox x:Name="txtZ" Width="50" Text="0"/>
                <Button x:Name="btnSet" Content="Set Point" Margin="10,0,0,0" Click="btnSet_Click"/>
            </StackPanel>

            <!-- Step + Camera Controls -->
            <StackPanel Orientation="Horizontal" Margin="5" VerticalAlignment="Center">
                <TextBlock Text="Step:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtStep" Width="50" Text="1"/>
                <Button x:Name="btnSetStep" Content="Set Step" Margin="10,0,0,0" Click="btnSetStep_Click"/>

                <!-- Snap to Grid checkbox -->
                <CheckBox x:Name="chkSnapToGrid" Content="Snap to Grid" Margin="20,0,0,0" IsChecked="True"/>

                <!-- Camera switch button -->
                <TextBlock Text="View:" VerticalAlignment="Center" Margin="15,0,0,0"/>
                <Button x:Name="btnSwitchCamera" Content="Switch to Ortho" Margin="5,0,0,0" Click="SwitchCamera_Click"/>

               
            </StackPanel>

            <!-- Sliders -->
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="X:" VerticalAlignment="Center"/>
                <Slider x:Name="sliderX" Width="200" Minimum="-10" Maximum="10" Value="0"
                        ValueChanged="Slider_ValueChanged"/>
                <TextBlock Text="Y:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <Slider x:Name="sliderY" Width="200" Minimum="-10" Maximum="10" Value="0"
                        ValueChanged="Slider_ValueChanged"/>
                <TextBlock Text="Z:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <Slider x:Name="sliderZ" Width="200" Minimum="-10" Maximum="10" Value="0"
                        ValueChanged="Slider_ValueChanged"/>
            </StackPanel>

            <!-- Range Settings -->
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Range X:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtMinX" Width="50" Text="-10"/>
                <TextBlock Text="to" VerticalAlignment="Center"/>
                <TextBox x:Name="txtMaxX" Width="50" Text="10"/>

                <TextBlock Text=" Y:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <TextBox x:Name="txtMinY" Width="50" Text="-10"/>
                <TextBlock Text="to" VerticalAlignment="Center"/>
                <TextBox x:Name="txtMaxY" Width="50" Text="10"/>

                <TextBlock Text=" Z:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <TextBox x:Name="txtMinZ" Width="50" Text="-10"/>
                <TextBlock Text="to" VerticalAlignment="Center"/>
                <TextBox x:Name="txtMaxZ" Width="50" Text="10"/>

                <Button x:Name="btnSetRange" Content="Set Range" Margin="10,0,0,0" Click="btnSetRange_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- 3D View -->
        <h:HelixViewport3D x:Name="view1" ShowCoordinateSystem="True"
                           ShowViewCube="True" ZoomExtentsWhenLoaded="True"
                           MouseLeftButtonDown="view1_MouseLeftButtonDown"
                            MouseMove="view1_MouseMove"
                            MouseLeftButtonUp="view1_MouseLeftButtonUp">        
            <h:DefaultLights/>
        </h:HelixViewport3D>
    </DockPanel>
</Window>
